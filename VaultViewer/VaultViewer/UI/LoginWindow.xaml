<Window x:Class="VaultViewer.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VAULT-TEC TERMINAL" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        FontFamily="Consolas"
        AllowsTransparency="True"
        WindowStyle="None">
    <Grid>
        <!-- Scanline Background -->
        <Grid.Background>
            <VisualBrush TileMode="Tile" Viewport="0,0,1,0.05" ViewportUnits="RelativeToBoundingBox" Stretch="None">
                <VisualBrush.Visual>
                    <Rectangle Fill="#FF004400" Height="1"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>

        <!-- Main Panel -->
        <Border Background="#FF002200" BorderBrush="LimeGreen" BorderThickness="2" CornerRadius="15"
                Padding="20" Width="350" Height="400"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="235">

                <TextBlock Text="VAULT-TEC" FontSize="28" FontWeight="Bold"
                           Foreground="LimeGreen" TextAlignment="Center"
                           Margin="0,0,0,25" HorizontalAlignment="Center"/>

                <TextBox x:Name="txt_Username" Width="220" Height="30"
                         Background="Black" Foreground="LimeGreen"
                         BorderBrush="LimeGreen" Margin="0,5" HorizontalAlignment="Center"/>

                <PasswordBox x:Name="txt_Password" Width="220" Height="30"
                             Background="Black" Foreground="LimeGreen"
                             BorderBrush="LimeGreen" Margin="0,5" HorizontalAlignment="Center"/>

                <Button x:Name="Authenticate" Content="LOGIN" Click="BtnAuthenticate"
                        Background="Black" BorderBrush="LimeGreen" BorderThickness="1"
                        Foreground="LimeGreen" Width="120" Margin="0,20,0,5" HorizontalAlignment="Center"/>

                <Button x:Name="create_user" Content="CREATE USER" Click="BtnCreateUser"
                        Background="Black" BorderBrush="LimeGreen" BorderThickness="1"
                        Foreground="LimeGreen" Width="120" Margin="0,5,0,5" HorizontalAlignment="Center"/>
                <Button x:Name="Elliot" Content="TEST DB" Click="BtnTestConnection_Click"
                        Background="Black" BorderBrush="LimeGreen" Margin="0,5,0,5" BorderThickness="1"
                        Foreground="LimeGreen" Width="121"/>
            </StackPanel>
        </Border>

        <!-- Exit Button (top right corner) (closeapp not implemented yet)--> 
        <Button Content="✖" Width="20" Height="20" Background="Transparent" BorderThickness="0"
                Foreground="LightGreen" FontWeight="Bold" FontSize="14"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"/>
    </Grid>
</Window>
