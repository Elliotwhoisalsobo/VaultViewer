<Window x:Class="VaultViewer.UI.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VaultViewer.UI"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="CreateEmployeeBtn" Content="Add employee" HorizontalAlignment="Left" Click="addEmployeePopup" Margin="423,175,0,0" VerticalAlignment="Top"/>
        <Popup x:Name="AddEmployeePopup"
           Placement="Center" StaysOpen="False">
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <StackPanel>
                    <!--EmployeeID, FirstName, LastName, DateOfBirth, AddressLine1, AddressLine2, PostalCode, PostalCity, Country, EmploymentDate, CurrentMonthlySalary, IsDeleted-->
                    <TextBox x:Name="FirstNameBox" Text="FirstName"/>
                    <TextBox x:Name="LastNameBox" Text="LastName"/>
                    <TextBox x:Name="AddressLineBox" Text="Address"/>
                    <TextBox x:Name="PostalCodeBox" Text="PostalCode"/>
                    <TextBox x:Name="PostalCityBox" Text="City"/>
                    <TextBox x:Name="CountryBox" Text="Country"/>
                    <DatePicker x:Name="DateOfBirthBox" Text="Date of birth" />
                    <!--text not displaying?-->
                    <!--<DatePicker x:Name="EmploymentDateBox" Text="Date of employment"/> -->
                    <!-- <ComboBox x:Name="DepartmentBox">
                        <ComboBoxItem>Other</ComboBoxItem>
                        <ComboBoxItem>Engineer</ComboBoxItem>
                        <ComboBoxItem>Sales</ComboBoxItem>
                    </ComboBox> -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Save" Click="SaveEmployee"/>
                        <Button Content="Cancel" Click="CancelPopup" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

        <Button x:Name="ViewEmployeesBtn" Content="View employees" HorizontalAlignment="Left" Click="ShowEmployees" Margin="423,264,0,0" VerticalAlignment="Top"/>
        <Button x:Name="DeleteEmployeeBtn" Content="Delete employee" HorizontalAlignment="Left" Visibility="Hidden" Click="BtnDeleteEmployee" Margin="240,361,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="EmployeeListBox" Visibility="Hidden" Margin="198,175,410,89" SelectionChanged="EmployeeListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Name}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <Button x:Name="Btnemployeeofmonth" Content="Select employee of the month" HorizontalAlignment="Left" Margin="382,132,0,0" VerticalAlignment="Top"/>
        <!--SelectionChanged="" DisplayMemberPath="" IsSynchronizedWithCurrentItem="True"-->
        <Button x:Name="Btn_Logout" Content="Logout" Click="BtnLogout" HorizontalAlignment="Right" Margin="0,35,20,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="Btn_assignEmployeeRole" Content="Assign employee role" Click="BtnEmployeeRole" HorizontalAlignment="Left" Margin="400,217,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Btn_AddEmployeeRole" Content="Assign role" Visibility="Hidden" Click="BtnAddEmployeeRole" Margin="198,326,0,0" Width="105" VerticalAlignment="Top" HorizontalAlignment="Left" Height="45" ></Button>

        <Popup x:Name="AssignRolePopup" Placement="Center" StaysOpen="False">
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="Assign Role to Employee" FontWeight="Bold" Margin="0,0,0,10"/>

                    <Button Content="Default" Click="AssignRole_Default" Margin="0,2"/>
                    <Button Content="HR" Click="AssignRole_HR" Margin="0,2"/>
                    <Button Content="Engineer" Click="AssignRole_Engineer" Margin="0,2"/>
                    <Button Content="Admin" Click="AssignRole_Admin" Margin="0,2"/>

                    <Button Content="Cancel" Click="CancelAssignRole" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
