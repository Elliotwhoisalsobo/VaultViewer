<Window x:Class="VaultViewer.UI.UserPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VaultViewer.UI"
        mc:Ignorable="d"
        Title="UserPanel" Height="450" Width="800">
    <Grid>
        <Button x:Name="Btn_Logout" Visibility="Hidden" Content="Logout" Click="BtnLogout" HorizontalAlignment="Left" Margin="725,35,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnUser" Visibility="Hidden" Click="ShowUserData" Content="Appear for User" HorizontalAlignment="Left" Margin="68,162,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnHR" Visibility="Hidden" Content="Appear for HR" HorizontalAlignment="Left" Margin="270,162,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnEngineer" Visibility="Hidden"  Content="Appear for Engineer" HorizontalAlignment="Left" Margin="467,162,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnAdmin" Visibility="Hidden"  Content="Appear for Admin" HorizontalAlignment="Left" Margin="656,162,0,0" VerticalAlignment="Top"/>


        <DataGrid x:Name="UserData" d:ItemsSource="{dataset_customers}" AlternatingRowBackground="DarkGreen" Visibility="Hidden" IsReadOnly="True"/>

    </Grid>
</Window>
